<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--#region Master -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Master/Style/Scrollbar.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <FontFamily x:Key="GlobalFontFamily" >/Font/PingFang SC.ttf#PingFang SC</FontFamily>
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}"></Setter>
    </Style>
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}"></Setter>
    </Style>
    <Style TargetType="Border" x:Key="MouseOverBorder">
        <Setter Property="CornerRadius" Value="4"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="12"  	ShadowDepth="4"  Color="#DDDDDD"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--#endregion-->
</ResourceDictionary>