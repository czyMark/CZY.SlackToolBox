<UserControl x:Class="CZY.SlackToolBox.LuckyControl.Input.TextInfoBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:CZY.SlackToolBox.LuckyControl.Input">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left"  >
        <Border BorderThickness="0.5" BorderBrush="Gray" Width="100">
            <TextBlock x:Name="DescriptionText"   Foreground="#6F7174" Background="#FCFCFC" 
                       HorizontalAlignment="Center" Margin="1,0" VerticalAlignment="Center"
                        ></TextBlock>
        </Border>
        <TextBox BorderThickness="0,0.5,0.5,0.5"  BorderBrush="Gray" Background="#FCFCFC" Width="240"
                     HorizontalAlignment="Center" Padding="10,12" Height="42" UndoLimit="1"  
                 x:Name="InputValue"         
                         local:TextBoxPrompt.IsPromptEnabled="True"
                         >
        </TextBox>
    </StackPanel>
</UserControl>
