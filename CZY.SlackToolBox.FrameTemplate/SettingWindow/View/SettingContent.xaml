                    <TextBox x:Name="TextInput" Width="200" Height="20" Margin="0,10"/>
                    <ComboBox x:Name="VoiceSelection" Width="200" Height="20" Margin="0,10"/>
                    <Button Content="SpeakText" Click="SpeakText_Click" Margin="0,10"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="系统配置">
            <Grid Background="Beige" >
